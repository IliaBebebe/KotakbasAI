{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/admin.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/admin(.*)",
      "dest": "/api/admin.js"
    },
    {
      "src": "/api/chat(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "buildCommand": "npm install && npm run build"
}
