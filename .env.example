# Production Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=10000
NODE_ENV=production

# MongoDB Atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster.mongodb.net/kotakbasai?retryWrites=true&w=majority

# OpenRouter AI API
AI_API_KEY=sk-or-v1-YOUR_API_KEY_HERE
AI_API_URL=https://openrouter.ai/api/v1/chat/completions
AI_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Admin Password (use Latin characters for compatibility)
ADMIN_PASSWORD=Zhopa123!
